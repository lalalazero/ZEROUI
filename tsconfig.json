{
    "compilerOptions": {
        "outDir": "dist",
        "declaration": true,
        "baseUrl": ".",
        "module": "esnext",
        "target": "es5",
        "lib": ["es6", "dom"],
        "sourceMap": true,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDir": ".",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "importHelpers": true,
        "strictNullChecks": true,
        "experimentalDecorators": true,
        // "suppressImplicitAnyIndexErrors": true,
        // https://github.com/Microsoft/TypeScript/issues/28762#issuecomment-443406607
        // "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
        // "noUnusedLocals": true
        //    "typeRoots": [
        //      "./components/types/custom.d.ts"
        //    ]
    },
    "include": ["components/**/*"],
    "exclude": [
        "node_modules",
        "build",
        "dist",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "src/setupTests.ts",
        "*.js"
    ]
}
